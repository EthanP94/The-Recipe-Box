{{#if recipes}}
  <h2>Saved Recipes!</h2>
  <div class="row" >
    <div class="paper col-sm-7">
      <div class="paper-content">
        <div id="recipeCard" class="mb-3" style="max-width: 1000px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="{{recipes.imageURL}}"
                class="img-fluid rounded-start"
                alt="Photo Of Food"
              />
            </div>
            <div class="col-md-8">
              <div class="">
                <h5 class="">Recipe: {{recipes.name}}</h5>
                <p class="">Serves: {{recipes.serves}}</p>
                <p class="">Estimated Prep Time: {{recipes.prep_time}}</p>
                <p class="">Estimated Cook Time: {{recipes.cook_time}}</p>
                <p class="">Estimated Rest Time: {{recipes.rest_time}}</p>
                <p class="">List Of Ingredients: {{recipes.ingredients}}</p>
                <p class="">Directions: {{recipes.directions}}</p>
                <div class="macro-container d-flex flex-row">
                  <p data-macro={{recipes.fat}}>Fat: {{recipes.fat}}</p>
                  <p data-macro={{recipes.carbs}}>Carbs: {{recipes.carbs}}</p>
                  <p data-macro={{recipes.protein}}>Protein:
                    {{recipes.protein}}</p>
                  <p data-macro={{recipes.sugar}}>Sugar: {{recipes.sugar}}</p>
                  <p data-macro={{recipes.sodium}}>Sodium:
                    {{recipes.sodium}}</p>
                  <p data-macro={{recipes.calories}}>Calories:
                    {{recipes.calories}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
    <canvas class="bg-white rounded p-2" id="myChart" width="50px" height="50px"></canvas>
    </div>
  </div>

{{else}}
  <h2>You Have No Recipes Saved, Why Not Add Some?</h2>
{{/if}}

<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"
></script>

<script
  src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"
></script>
<script src="/js/profile.js"></script>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Recipe Box</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header class="display-flex justify-space-between align-center p-2">
      <nav>
        <h1>
          The Recipe Box
        </h1>
        <!-- Only display the logout button if the user is logged in -->
        {{#if logged_in}}
          <button class="btn" id="logout">Logout</button>
        {{else}}
          <a href="/login" id="login">Login</a>
        {{/if}}
        <a href="/" id="homeLink">Homepage</a>
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    {{#if logged_in}}
      <script src="/public/js/logout.js"></script>
    {{else}}
      <script src="/public/js/login.js"></script>
    {{/if}}
  </body>

</html>